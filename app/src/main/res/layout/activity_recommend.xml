<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/edit_pref_background">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按下按鈕開始推薦晚餐 🍜"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />
    <FrameLayout
        android:id="@+id/slotFrame"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginBottom="24dp">

        <!-- 拉霸機整體圖片 -->

        <!-- 疊在圖片上的顯示區塊 -->
        <ImageView
            android:id="@+id/slotMachineImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/slot_machine_full" />

        <TextView
            android:id="@+id/slotView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:padding="4dp"
            android:text="🍽️"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </FrameLayout>



    <Button
        android:id="@+id/drawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推薦一下！"
        android:enabled="false" />

    <Button
        android:id="@+id/publicRecommendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公共推薦" />

    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回主畫面"
        android:layout_marginTop="24dp" />
</LinearLayout>
