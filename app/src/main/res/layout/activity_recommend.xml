<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/edit_pref_background">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the dinner recommendation 🍜"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />
    <FrameLayout
        android:id="@+id/slotFrame"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginBottom="24dp">

        <!-- 拉霸機整體圖片 -->

        <!-- 疊在圖片上的顯示區塊 -->
        <ImageView
            android:id="@+id/slotMachineImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/slot_machine_full" />

        <TextView
            android:id="@+id/slotView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:padding="4dp"
            android:text="🍽️"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </FrameLayout>

    <!-- Spinner 外層用 CardView 來做白底 + 圓角 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="12dp">

        <Spinner
            android:id="@+id/citySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="#FFFFFF"
            android:padding="12dp" />           <!-- Spinner 內距 -->

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/drawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Recommendation" />

    <Button
        android:id="@+id/publicRecommendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Recommendation" />

    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_marginTop="24dp" />
</LinearLayout>
